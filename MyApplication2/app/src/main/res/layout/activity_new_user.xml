<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.luisafarias.myapplication.NewUserActivity">

    <TextView
        android:_id="@+_id/novo_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Novo UsuÃ¡rio"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:_id="@+_id/_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="Nome:"
        android:layout_below="@_id/novo_usuario"/>
    <TextView
        android:_id="@+_id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="E-mail:"
        android:layout_below="@_id/_nome" />
    <TextView
        android:_id="@+_id/senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="Senha:"
        android:layout_below="@_id/email"/>

    <EditText
        android:_id="@+_id/caixanomee"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_toRightOf="@_id/_nome"/>

    <EditText
        android:_id="@+_id/caixaemaill"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@_id/email"
        android:layout_below="@_id/caixanomee"/>

    <EditText
        android:_id="@+_id/caixaSenha"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_below="@+_id/caixaemaill"
        android:layout_toEndOf="@+_id/senha" />

    <Button
        android:_id="@+_id/criarUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="criar"
        android:onClick="createUser"/>


</RelativeLayout>
