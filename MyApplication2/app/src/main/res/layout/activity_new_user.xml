<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accent"
    tools:context="com.example.luisafarias.myapplication.activities.NewUserActivity">

    <TextView
        android:id="@+id/novo_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Novo UsuÃ¡rio"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp" />


    <EditText
        android:id="@+id/caixaemaill"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="E-mail"
        android:layout_below="@id/caixanomee"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:layout_editor_absoluteX="49dp"
        android:layout_marginTop="334dp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/caixaSenha"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Senha"
        android:inputType="textPassword"
        android:layout_below="@+id/caixaemaill"
        app:layout_constraintBottom_toTopOf="@+id/criarUser"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:layout_editor_absoluteX="49dp"
        android:layout_marginBottom="43dp" />

    <Button
        android:id="@+id/criarUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="criar"
        android:onClick="createUser"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:layout_editor_absoluteY="491dp"
        tools:layout_editor_absoluteX="157dp" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="296dp"
        android:layout_height="63dp"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="251dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/caixanomee"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:hint="Nome"
            app:layout_constraintBottom_toTopOf="@+id/caixaemaill"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/novo_usuario" />

    </android.support.design.widget.TextInputLayout>


</android.support.constraint.ConstraintLayout>
